[init]
test -e /etc/grid-security/daemon/hostcert.pem || echo "error: host certfificate missing: /etc/grid-security/daemon/hostcert.pem"
test -e /etc/grid-security/daemon/hostkey.pem  || echo "error: host key missing: /etc/grid-security/daemon/hostkey.pem"
test -e /etc/grid-security/grid-mapfile        || echo "error: grid-map file missing: /etc/grid-security/grid-mapfile"

[mgm:xrootd:mgm]
xrd.tls  /etc/grid-security/daemon/hostcert.pem /etc/grid-security/daemon/hostkey.pem
xrd.tlsca  certdir /etc/grid-security/certificates/
http.gridmap  /etc/grid-security/grid-mapfile
http.trace  false
http.secxtractor  libXrdVoms.so
http.exthandler  EosMgmHttp libEosMgmHttp.so eos::mgm::http::redirect-to-https=0
http.exthandler  xrdtpc libXrdHttpTPC.so
mgmofs.macaroonslib  libXrdMacaroons.so libXrdAccSciTokens.so